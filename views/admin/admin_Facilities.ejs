<%- include('../layouts/admin_layouts_header', { title: 'Admin | Facilities' , currentPage: 'Facilities' }) %>
<%- include('../layouts/admin_layouts_sidebar', { currentPage: 'Facilities' }) %>

<div class="main-content">
    <div class="content">
        <div class="page-header">
            <h1 class="page-title">Facilities Management</h1>
        </div>

        <% if (errorMsg) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorMsg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <div class="content-section">
            <div class="section-header">
                <h2 class="section-title">Add New Facility</h2>
            </div>

            <div class="card">
                <div class="card-body">
                    <form id="addFacilityForm" action="/admin/Facilities/add" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="form-label">Facility Name *</label>
                            <input type="text" name="facility_name" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Description</label>
                            <textarea id="description" name="description" class="form-input ckeditor-field" rows="3"></textarea>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Images (up to 5, Please upload below 10MB) *</label>
                            <input type="file" name="images" multiple class="form-input" accept="image/*" required>
                            <small class="form-text">Select multiple images by holding Ctrl (Windows) or Command (Mac). Maximum 5 images allowed.</small>
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary">Add Facility</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="section-header" style="margin-top: 30px;">
                <h2 class="section-title">Current Facilities</h2>
                <div class="table-info">
                    Showing <%= manufacilities.length %> facilities
                </div>
            </div>

            <div class="table-wrap">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th width="60">S.No</th>
                            <th>Facility Name</th>
                            <th>Description</th>
                            <th width="120">Images</th>
                            <th width="150">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (manufacilities.length > 0) { %>
                            <% manufacilities.forEach((facility, index) => { %>
                                <tr>
                                    <td class="text-center"><%= manufacilities.length - index %></td>
                                    <td><%- facility.facility_name %></td>
                                    <td>
                                        <% 
                                        let descText = facility.description || '';
                                        // Strip HTML tags for display
                                        descText = descText.replace(/<[^>]*>/g, '');
                                        if (descText.length > 80) {
                                            descText = descText.substring(0, 77) + '...';
                                        }
                                        %>
                                        <%- descText %>
                                    </td>
                                    <td>
                                        <div class="image-gallery">
                                            <% [facility.image1, facility.image2, facility.image3, facility.image4, facility.image5].forEach(img => { %>
                                                <% if (img) { %>
                                                    <img src="<%= img %>" class="small-thumbnail" 
                                                         data-bs-toggle="tooltip" data-bs-placement="top" title="View image" onclick="previewImage('<%= img %>')"/>
                                                <% } %>
                                            <% }) %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-warning" onclick="openEditModal(<%= facility.id %>)">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <a href="/admin/Facilities/delete/<%= facility.id %>" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Are you sure you want to delete this facility?')">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <div class="empty-state">
                                        <i class="fas fa-building fa-3x text-muted mb-3"></i>
                                        <h5>No Facilities Found</h5>
                                        <p class="text-muted">Get started by adding your first facility.</p>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Edit Facility</h5>
                <button type="button" 
                    class="btn btn-sm btn-light rounded-circle shadow" 
                    data-bs-dismiss="modal" 
                    aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <form id="editForm" method="POST" enctype="multipart/form-data">
                    <input type="hidden" id="edit_id" name="id">
                    
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label">Facility Name *</label>
                            <input type="text" id="edit_facility_name" name="facility_name" class="form-control" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label">Description</label>
                            <textarea id="edit_description" name="description" class="form-control ckeditor-field" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label">Upload New Images (will replace old ones)</label>
                            <input type="file" name="images" multiple class="form-control" accept="image/*">
                            <small class="form-text text-muted">Select multiple images by holding Ctrl (Windows) or Command (Mac). Maximum 5 images allowed.</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label">Current Images</label>
                            <div id="currentImages" class="image-gallery mt-2"></div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Facility</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Image Preview Modal -->
<div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Image Preview</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="previewImage" src="" class="img-fluid rounded" alt="Preview">
            </div>
        </div>
    </div>
</div>

