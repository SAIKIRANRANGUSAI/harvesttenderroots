<%- include('../layouts/admin_layouts_header', { title: 'Admin | Gallery' , currentPage: 'Gallery' }) %>
<%- include('../layouts/admin_layouts_sidebar', { currentPage: 'Gallery' }) %>

<div class="main-content">
    <div class="content">
        <div class="page-header">
            <h1 class="page-title">Gallery Management</h1>
        </div>

        <% if (errorMsg) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= errorMsg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <div class="content-section">
            <div class="section-header">
                <h2 class="section-title">Add New Gallery</h2>
            </div>

            <div class="card">
                <div class="card-body">
                    <form id="addGalleryForm" action="/admin/gallery/add" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="form-label">Category *</label>
                            <input type="text" name="category" class="form-input" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Cover Image *</label>
                            <input type="file" name="cover_image" class="form-input" accept="image/*" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Gallery Images (Multiple allowed)</label>
                            <input type="file" name="images" multiple class="form-input" accept="image/*">
                            <small class="form-text">Hold Ctrl (Windows) or Command (Mac) to select multiple images.</small>
                        </div>

                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary">Add Gallery</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="section-header" style="margin-top: 30px;">
                <h2 class="section-title">Current Galleries</h2>
                <div class="table-info">
                    Showing <%= galleries.length %> galleries
                </div>
            </div>

            <div class="table-wrap">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th width="60">S.No</th>
                            <th>Category</th>
                            <th width="120">Cover</th>
                            <th width="200">Images (Click × to delete)</th>
                            <th width="150">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (galleries.length > 0) { %>
                            <% galleries.forEach((gallery, index) => { %>
                                <tr>
                                    <td class="text-center"><%= galleries.length - index %></td>
                                    <td><%- gallery.category %></td>
                                    <td>
                                        <% if (gallery.cover_image) { %>
                                            <div class="position-relative d-inline-block">
                                                <img src="<%= gallery.cover_image %>" class="small-thumbnail" 
                                                     data-bs-toggle="tooltip" data-bs-placement="top" title="View cover image"
                                                     onclick="previewImage('<%= gallery.cover_image %>')"/>
                                                <form action="/admin/gallery/delete-image" method="POST" class="position-absolute top-0 start-100 translate-middle">
                                                    <input type="hidden" name="category" value="<%= gallery.category %>">
                                                    <input type="hidden" name="imageUrl" value="<%= gallery.cover_image %>">
                                                    <input type="hidden" name="imageType" value="cover">
                                                    <button type="submit" class="btn btn-danger btn-xs rounded-circle p-0" 
                                                            style="width: 20px; height: 20px; font-size: 10px;"
                                                            onclick="return confirm('Delete this cover image?')">
                                                        ×
                                                    </button>
                                                </form>
                                            </div>
                                        <% } else { %>
                                            <span class="text-muted">No cover</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="image-gallery">
                                            <% const galleryImages = JSON.parse(gallery.images || '[]') %>
                                            <% if (galleryImages.length > 0) { %>
                                                <% galleryImages.forEach((img, imgIndex) => { %>
                                                    <div class="position-relative d-inline-block">
                                                        <img src="<%= img %>" class="small-thumbnail" 
                                                             data-bs-toggle="tooltip" data-bs-placement="top" title="View image"
                                                             onclick="previewImage('<%= img %>')"/>
                                                        <form action="/admin/gallery/delete-image" method="POST" class="position-absolute top-0 start-100 translate-middle">
                                                            <input type="hidden" name="category" value="<%= gallery.category %>">
                                                            <input type="hidden" name="imageUrl" value="<%= img %>">
                                                            <input type="hidden" name="imageType" value="gallery">
                                                            <button type="submit" class="btn btn-danger btn-xs rounded-circle p-0" 
                                                                    style="width: 20px; height: 20px; font-size: 10px;"
                                                                    onclick="return confirm('Delete this image?')">
                                                                ×
                                                            </button>
                                                        </form>
                                                    </div>
                                                <% }) %>
                                            <% } else { %>
                                                <span class="text-muted">No images</span>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <button class="btn btn-sm btn-warning" onclick="openEditModal('<%= gallery.category %>')">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <form action="/admin/gallery/delete/<%= encodeURIComponent(gallery.category) %>" method="POST" style="display:inline;">
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this entire gallery?')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center py-4">
                                    <div class="empty-state">
                                        <i class="fas fa-images fa-3x text-muted mb-3"></i>
                                        <h5>No Galleries Found</h5>
                                        <p class="text-muted">Get started by adding your first gallery.</p>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal (Simplified - only for category name change) -->
<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Edit Gallery</h5>
                <button type="button" 
                    class="btn btn-sm btn-light rounded-circle shadow" 
                    data-bs-dismiss="modal" 
                    aria-label="Close">
                    &times;
                </button>
            </div>
            <div class="modal-body">
                <form id="editForm" method="POST" enctype="multipart/form-data">
                    <input type="hidden" id="edit_original_category" name="original_category">
                    
                    <div class="row">
                        <!-- Category Name -->
                        <div class="col-12 mb-3">
                            <label class="form-label">Category Name *</label>
                            <input type="text" id="edit_category_name" name="category_name" class="form-control" required>
                        </div>

                        <!-- Cover Image -->
                        <div class="col-12 mb-3">
                            <label class="form-label">Cover Image</label>
                            <input type="file" name="cover_image" class="form-control" accept="image/*">
                            <small class="form-text text-muted">Upload a new cover image to replace the existing one.</small>
                        </div>

                        <!-- Additional Gallery Images -->
                        <div class="col-12 mb-3">
                            <label class="form-label">Gallery Images (Multiple allowed)</label>
                            <input type="file" name="images" multiple class="form-control" accept="image/*">
                            <small class="form-text text-muted">Hold Ctrl (Windows) or Command (Mac) to select multiple images. These will be added to the existing gallery.</small>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Gallery</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Image Preview Modal -->
<div class="modal fade" id="imagePreviewModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Image Preview</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="previewImage" src="" class="img-fluid rounded" alt="Preview">
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // ========= GALLERY DATA =========
    const galleryData = {
        <% galleries.forEach(gallery => { %>
            '<%= gallery.category %>': {
                category: '<%= gallery.category %>',
                cover_image: '<%= gallery.cover_image %>',
                images: JSON.parse('<%- JSON.stringify(JSON.parse(gallery.images || "[]")) %>')
            },
        <% }) %>
    };

    let editModalInstance = null;

    // ========= ON PAGE LOAD =========
    document.addEventListener('DOMContentLoaded', function() {
        // Tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(el => new bootstrap.Tooltip(el));

        // Modal instance
        editModalInstance = new bootstrap.Modal(document.getElementById('editModal'));
    });

    // ========= OPEN EDIT MODAL =========
    function openEditModal(category) {
        const gallery = galleryData[category];
        if (!gallery) return;

        // Set form action to the main edit route (not edit-category)
        document.getElementById('editForm').action = `/admin/gallery/edit/${encodeURIComponent(category)}`;
        document.getElementById('edit_category_name').value = gallery.category || '';

        // Show modal
        editModalInstance.show();
    }

    // ========= PREVIEW IMAGE =========
    function previewImage(src) {
        document.getElementById('previewImage').src = src;
        new bootstrap.Modal(document.getElementById('imagePreviewModal')).show();
    }
</script>
<style>
    /* ========= GLOBAL STYLES ========= */
    .main-content {
        padding: 20px;
        background-color: #f8f9fa;
    }
    
    .content {
        max-width: 1400px;
        margin: 0 auto;
        width: 100%;
    }
    
    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #e9ecef;
    }
    
    .page-title {
        color: #2c3e50;
        font-weight: 600;
        font-size: 1.8rem;
        margin: 0;
    }
    
    .content-section {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 2rem;
        margin-bottom: 2rem;
    }
    
    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eaeaea;
    }
    
    .section-title {
        color: #2c3e50;
        font-weight: 600;
        font-size: 1.4rem;
        margin: 0;
    }
    
    .table-info {
        color: #6c757d;
        font-size: 0.9rem;
        background: #f8f9fa;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 500;
    }
    
    /* ========= CARD STYLES ========= */
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.1);
    }
    
    .card-body {
        padding: 2rem;
    }
    
    /* ========= FORM STYLES ========= */
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    
    .form-input, .form-control {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #d1d3e2;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
        background-color: #fff;
    }
    
    .form-input:focus, .form-control:focus {
        border-color: #4e73df;
        outline: none;
        box-shadow: 0 0 0 3px rgba(78, 115, 223, 0.15);
        transform: translateY(-1px);
    }
    
    .form-text {
        color: 6c757d;
        font-size: 0.85rem;
        margin-top: 0.25rem;
        display: block;
    }
    
    .form-footer {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eaeaea;
        text-align: right;
    }
    
    /* ========= BUTTON STYLES ========= */
    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        border: none;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        box-shadow: 0 4px 15px rgba(78, 115, 223, 0.3);
    }
    
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(78, 115, 223, 0.4);
    }
    
    .btn-warning {
        background: linear-gradient(135deg, #f6c23e 0%, #dda20a 100%);
        box-shadow: 0 4px 15px rgba(246, 194, 62, 0.3);
    }
    
    .btn-danger {
        background: linear-gradient(135deg, #e74a3b 0%, #be2617 100%);
        box-shadow: 0 4px 15px rgba(231, 74, 59, 0.3);
    }
    
    .btn-sm {
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
    }
    
    .btn-xs {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }
    
    .btn-group {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }
    
    /* ========= TABLE STYLES ========= */
    .table-wrap {
        overflow-x: auto;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.06);
        margin-top: 1.5rem;
    }
    
    .table {
        margin-bottom: 0;
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }
    
    .table th {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        font-weight: 600;
        padding: 1rem;
        text-align: left;
        border: none;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .table td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #e9ecef;
        font-size: 0.95rem;
    }
    
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(78, 115, 223, 0.02);
    }
    
    .table-striped tbody tr:hover {
        background-color: rgba(78, 115, 223, 0.08);
        transform: scale(1.01);
        transition: all 0.2s ease;
    }
    
    /* ========= IMAGE GALLERY ========= */
    .image-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        align-items: center;
    }
    
    .small-thumbnail {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 6px;
        border: 2px solid #fff;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .small-thumbnail:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        z-index: 10;
        border-color: #4e73df;
    }
    
    /* ========= IMAGE DELETE BUTTONS ========= */
    .position-relative {
        margin: 2px;
    }
    
    .btn-danger.btn-xs {
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        opacity: 0.8;
        transition: all 0.3s ease;
    }
    
    .btn-danger.btn-xs:hover {
        opacity: 1;
        transform: scale(1.1);
    }
    
    /* ========= MODAL STYLES ========= */
    .modal-content {
        border-radius: 12px;
        border: none;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    }
    
    .modal-header {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
        color: white;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        padding: 1.5rem;
        border-bottom: none;
    }
    
    .modal-title {
        font-weight: 600;
        font-size: 1.3rem;
    }
    
    .modal-body {
        padding: 2rem;
    }
    
    .modal-footer {
        border-top: 1px solid #eaeaea;
        padding: 1.5rem 2rem;
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
    }
    
    /* ========= EMPTY STATE ========= */
    .empty-state {
        padding: 3rem 2rem;
        text-align: center;
        color: #6c757d;
    }
    
    .empty-state i {
        margin-bottom: 1rem;
        opacity: 0.5;
    }
    
    .empty-state h5 {
        margin-bottom: 0.5rem;
        color: #495057;
        font-weight: 600;
    }
    
    /* ========= RESPONSIVE STYLES ========= */
    @media (max-width: 992px) {
        .section-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
        
        .btn-group {
            flex-direction: column;
            width: 100%;
        }
        
        .btn-group .btn {
            width: 100%;
            margin-bottom: 0.5rem;
        }
        
        .modal-body {
            padding: 1.5rem;
        }
    }
    
    @media (max-width: 768px) {
        .main-content {
            padding: 1rem;
        }
        
        .content-section {
            padding: 1.5rem;
        }
        
        .card-body {
            padding: 1.5rem;
        }
        
        .page-title {
            font-size: 1.5rem;
        }
        
        .section-title {
            font-size: 1.2rem;
        }
        
        .table th, .table td {
            padding: 0.75rem;
            font-size: 0.9rem;
        }
        
        .image-gallery {
            justify-content: center;
        }
        
        .small-thumbnail {
            width: 40px;
            height: 40px;
        }
    }
    
    @media (max-width: 576px) {
        .modal-dialog {
            margin: 0.5rem;
        }
        
        .modal-body {
            padding: 1rem;
        }
        
        .btn {
            padding: 0.6rem 1.2rem;
            font-size: 0.9rem;
        }
    }
</style>

