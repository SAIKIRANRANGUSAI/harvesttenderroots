        <script>
            // Open modal to create new value
            function openCreateModal() {
                const form = document.getElementById("editForm");
                form.action = "/admin/core-values/create"; // your create POST route
                document.getElementById("modalHeading").value = "";
                document.getElementById("modalTitle").textContent = "Add Core Value";
                document.getElementById("modalSubmitBtn").textContent = "Create";
                document.getElementById("editModal").style.display = "block";
            }

            // Open modal to edit existing value
            function openEditModal(id, heading) {
                const form = document.getElementById("editForm");
                form.action = "/admin/core-values/update/" + id; // your update POST route
                document.getElementById("modalHeading").value = heading || "";
                document.getElementById("modalTitle").textContent = "Edit Core Value";
                document.getElementById("modalSubmitBtn").textContent = "Save Changes";
                document.getElementById("editModal").style.display = "block";
            }

            function closeModal() {
                const form = document.getElementById("editForm");
                form.reset();
                document.getElementById("editModal").style.display = "none";
            }

            // Close modal when clicking outside
            window.onclick = function (event) {
                const modal = document.getElementById('editModal');
                if (event.target === modal) closeModal();
            }
        </script>


