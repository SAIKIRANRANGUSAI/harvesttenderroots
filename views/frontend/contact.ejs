                     </div>
                     <div class="it-contact__content mb-55">
                        <ul>
                           <li>
                              <div class="it-contact__list d-flex align-items-start">
                                 <div class="it-contact__icon">
                                    <span><i class="fa-solid fa-location-dot"></i></span>
                                 </div>
                                 <div class="it-contact__text">
                                    <span>Our Address</span>
                                    <a href="#"> Gattaiah center, <br> khammam - 507002</a>
                                 </div>
                              </div>
                           </li>
                           <li>
                              <div class="it-contact__list d-flex align-items-start">
                                 <div class="it-contact__icon">
                                    <span><i class="fa-solid fa-envelope"></i></span>
                                 </div>
                                 <div class="it-contact__text">
                                    <span>E-Mail</span>
                                    <a href="#"> tenderrootsharvest@gmail.com</a>
                                 </div>
                              </div>
                           </li>
                           <li>
                              <div class="it-contact__list d-flex align-items-start">
                                 <div class="it-contact__icon">
                                    <span><i class="fa-solid fa-phone phone"></i></span>
                                 </div>
                                 <div class="it-contact__text">
                                    <span>contact</span>
                                    <a href="tel:+99358954565">9248977754</a>

                                 </div>
                              </div>
                           </li>
                        </ul>
                     </div>
                     <div class="it-contact__bottom-box d-flex align-items-center justify-content-between">
                        <div class="it-footer-social">
                           <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                           <a href="#"><i class="fa-brands fa-instagram"></i></a>
                           <a href="#"><i class="fa-brands fa-youtube"></i></a>
                           <a href="#"><i class="fa-brands fa-twitter"></i></a>
                        </div>
                     </div>
                  </div>
               </div>

               <% 
  var displaySuccessMessage = typeof successMessage !== 'undefined' ? successMessage : null; 
  var displayErrors = typeof errors !== 'undefined' ? errors : []; 
  var displayOldInput = typeof oldInput !== 'undefined' ? oldInput : {}; 
%>

<div class="col-xl-5">
  <div class="it-contact__form-box">

    <form id="contactForm" action="/contact-us" method="POST">
      <div class="row">

        <!-- ✅ Success Message -->
<% if (displaySuccessMessage) { %>
  <div class="col-12 mb-3">
    <div class="it-message-box success">
      <%= displaySuccessMessage %>
    </div>
  </div>
<% } %>

<!-- ✅ Error Messages -->
<% if (displayErrors && displayErrors.length > 0) { %>
  <div class="col-12 mb-3">
    <div class="it-message-box error">
      <ul class="mb-0">
        <% displayErrors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>

        <div class="col-12 mb-25">
          <div class="it-contact-input-box">
            <label>Name*</label>
            <input type="text" name="name" placeholder="Name" required
              pattern="[A-Za-z\s]+" title="Only letters and spaces allowed"
              value="<%= displayOldInput.name || '' %>">
          </div>
        </div>

        <div class="col-12 mb-25">
          <div class="it-contact-input-box">
            <label>Email Address*</label>
            <input type="email" name="email" placeholder="Email" required
              value="<%= displayOldInput.email || '' %>">
          </div>
        </div>

        <div class="col-12 mb-25">
          <div class="it-contact-input-box">
            <label>Phone*</label>
            <input type="text" name="phone" placeholder="Phone" required
              pattern="^\+?\d{10,15}$" title="Enter a valid phone number"
              value="<%= displayOldInput.phone || '' %>">
          </div>
        </div>

        <div class="col-12 mb-25">
          <div class="it-contact-input-box">
            <label>Subject*</label>
            <input type="text" name="subject" placeholder="Subject" required maxlength="150"
              value="<%= displayOldInput.subject || '' %>">
          </div>
        </div>

        <div class="col-12 mb-25">
          <div class="it-contact-textarea-box">
            <label>Message*</label>
            <textarea name="message" placeholder="Message" required maxlength="2000"><%= displayOldInput.message || '' %></textarea>
          </div>
        </div>

        <!-- Google reCAPTCHA -->
        <div class="col-12 mb-25">
          <div class="g-recaptcha" data-sitekey="6LdN2NIrAAAAAFXuoxU9AzleCb6IIXtYGSkL7COT"></div>
        </div>

        <div class="col-12">
          <button type="submit" class="it-btn">
            <span>
              Send Message
              <svg width="17" height="14" viewBox="0 0 17 14" fill="none"
                xmlns="http://www.w3.org/2000/svg">
                <path d="M11 1.24023L16 7.24023L11 13.2402" stroke="currentcolor"
                  stroke-width="1.5" stroke-miterlimit="10"
                  stroke-linecap="round" stroke-linejoin="round" />
                <path d="M1 7.24023H16" stroke="currentcolor" stroke-width="1.5"
                  stroke-miterlimit="10" stroke-linecap="round"
                  stroke-linejoin="round" />
              </svg>
            </span>
          </button>
        </div>

      </div>
    </form>
  </div>
</div>

<script src="https://www.google.com/recaptcha/api.js" async defer></script>

            </div>
         </div>
      </div>
   </div>
