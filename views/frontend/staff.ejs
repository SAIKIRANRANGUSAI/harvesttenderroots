<%- include('partials/header') %>

    <!-- breadcrumb-area-start -->
    <div class="it-breadcrumb-area it-breadcrumb-bg"
        style="background-image: url(/images/breadcrumb-img.png); background-size: cover; background-position: center center; background-repeat: no-repeat;">

        <div class="container">
            <div class="row ">
                <div class="col-md-12">
                    <div class="it-breadcrumb-content z-index-3 text-center">
                        <div class="it-breadcrumb-title-box">
                            <h3 class="it-breadcrumb-title">Staff</h3>
                        </div>
                        <div class="it-breadcrumb-list-wrap">
                            <div class="it-breadcrumb-list">
                                <span><a href="index">home</a></span>
                                <span class="dvdr">//</span>
                                <span>Staff</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb-area-end -->

    <div class="staff-section">
        <div class="container">

            <h4 class="mb-4 text-center">STAFF DETAILS 2019-2020</h4>
            <div class="table-wrap">

                <table border="1" cellpadding="6" cellspacing="0" style="width:100%; border-collapse:collapse;"
    class="table table-striped">
    <thead>
        <tr style="background-color:#dc3545; color:#fff;">
            <th style="text-align:center;">SL NO.</th>
            <th style="text-align:left;">Teacher Name</th>
            <th style="text-align:left;">Designation</th>
            <th style="text-align:center;">Date of Birth</th>
            <th style="text-align:left;">Prof. Qual</th>
            <th style="text-align:center;">Experience</th>
            <th style="text-align:center;">Trained/Untrained</th>
            <th style="text-align:center;">First Appointment</th>
            <th style="text-align:left;">Class Assigned</th>
        </tr>
    </thead>
    <tbody>
        <% if (staffList && staffList.length > 0) { %>
            <% staffList.forEach((staff, index) => { %>
                <tr style="background-color: <%= index % 2 === 0 ? '#fff' : '#f8f9fa' %>;">
                    <td style="text-align:center;"><%= (currentPage - 1) * 10 + index + 1 %></td>
                    <td style="text-align:left;"><%= staff.teacher_name %></td>
                    <td style="text-align:left;"><%= staff.designation %></td>
                    <td style="text-align:center;"><%= staff.date_of_birth ? staff.date_of_birth.toISOString().split('T')[0] : '-' %></td>
                    <td style="text-align:left;"><%= staff.professional_qualification || '-' %></td>
                    <td style="text-align:center;"><%= staff.experience || '-' %></td>
                    <td style="text-align:center;"><%= staff.trained_status %></td>
                    <td style="text-align:center;"><%= staff.first_appointment ? staff.first_appointment.toISOString().split('T')[0] : '-' %></td>
                    <td style="text-align:left;"><%= staff.class_assigned || '-' %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="9" class="text-center">No staff members found</td>
            </tr>
        <% } %>
    </tbody>
</table>

            </div>

            <div class="text-center">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center mt-4">
                        <% if (currentPage> 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <% } else { %>
                                <li class="page-item disabled">
                                    <span class="page-link">&laquo;</span>
                                </li>
                                <% } %>

                                    <% for(let i=1; i <=totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="?page=<%= i %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                        <% } %>

                                            <% if (currentPage < totalPages) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="?page=<%= currentPage + 1 %>"
                                                        aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                                <% } else { %>
                                                    <li class="page-item disabled">
                                                        <span class="page-link">&raquo;</span>
                                                    </li>
                                                    <% } %>
                    </ul>
                </nav>
            </div>

        </div>
    </div>


    <%- include('partials/footer') %>
