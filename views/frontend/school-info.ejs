<%- include('partials/header') %>

    <section class="school-info">
        <!-- breadcrumb-area-start -->
        <div class="it-breadcrumb-area it-breadcrumb-bg"
            style="background-image: url(/images/breadcrumb-img.png); background-size: cover; background-position: center center; background-repeat: no-repeat;">

            <div class="container">
                <div class="row ">
                    <div class="col-md-12">
                        <div class="it-breadcrumb-content z-index-3 text-center">
                            <div class="it-breadcrumb-title-box">
                                <h3 class="it-breadcrumb-title">School Information</h3>
                            </div>
                            <div class="it-breadcrumb-list-wrap">
                                <div class="it-breadcrumb-list">
                                    <span><a href="index">home</a></span>
                                    <span class="dvdr">//</span>
                                    <span>School-Info</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- breadcrumb-area-end -->
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-11">
                    <div class="school-info-content">

                        <div class="table-wrap table-responsive">
                            <table class="table table-striped">
                                <caption>Harvest Public School — Key Details</caption>
                                <thead>
                                    <tr>
                                        <th scope="col">Field</th>
                                        <th scope="col">Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% info.forEach(row=> { %>
                                        <tr>
                                            <td>
                                                <%= row.field_name %>
                                            </td>
                                            <td><%- row.field_value %></td> <!-- ✅ unescaped for links -->
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>