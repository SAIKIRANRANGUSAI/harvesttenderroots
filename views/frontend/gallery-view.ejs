<%- include('partials/header') %>

<!-- breadcrumb-area-start -->
<div class="it-breadcrumb-area it-breadcrumb-bg" style="background-image: url(/images/breadcrumb-img.png); background-size: cover; background-position: center center; background-repeat: no-repeat;">
    <div class="container">
        <div class="row ">
            <div class="col-md-12">
                <div class="it-breadcrumb-content z-index-3 text-center">
                    <div class="it-breadcrumb-title-box">
                        <h3 class="it-breadcrumb-title"><%= gallery.category %></h3>
                    </div>
                    <div class="it-breadcrumb-list-wrap">
                        <div class="it-breadcrumb-list">
                            <span><a href="/">home</a></span>
                            <span class="dvdr">//</span>
                            <span><%= gallery.category %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area-end -->

<!-- Inline CSS for uniform cards -->
<style>
.gallery-item {
    display: block;
    overflow: hidden;
    border-radius: 5px;
    text-align: center;
}

.gallery-item img {
    width: 100%;
    height: 200px;      /* fixed height for all cards */
    object-fit: cover;  /* crop image nicely */
    display: block;
}
</style>

<div class="gallery-section">
    <div class="container">
        <div class="row gallery-container gallery-grid" id="lightgallery">
            <% if (gallery.images && gallery.images.length > 0) { %>
                <% gallery.images.forEach(img => { %>
                    <div class="col-md-3 mb-3">
                        <a class="gallery-item" 
                           href="<%= img %>" 
                           data-sub-html="<h4><%= gallery.category %></h4>">
                            <img src="<%= img %>" alt="<%= gallery.category %>">
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No images found in this gallery.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
